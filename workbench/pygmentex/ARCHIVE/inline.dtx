\newcommand\NLN@snippet@inlined[1]{%
  \group_begin:
  \typeout{DEBUG~PY~STYLE:<\NLN@opt@style>}
  \use_c:n { PYstyledefault }
  \tl_if_empty:NF \NLN@opt@style {
