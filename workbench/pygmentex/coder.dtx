        } {
          \regex_set:NV \l_CDR_regex \l_CDR_a_tl
          \CDRBlock_map_indexed_inline:nn { raw } {
            \CDR_int_compare:cNnF { __mini } > { ##1 } {
              \regex_match:NnT \l_CDR_regex { ##2 } {
                \CDR_int_set:cn { __maxi } { ##1 }
                \seq_map_break:
              }
            }
          }
        }
      }
    }
