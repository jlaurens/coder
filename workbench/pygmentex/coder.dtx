      \cs_set:Npn \CDR@@Line { \CDR_line_box_N:n }    
    }
  } { \PackageError
        { coder }
        { Unknown~numbers~options~:~ \CDRTag_get:c { numbers } }
        { See~the~coder~manual }
  }
\CDR@Debug {\string\CDR@Line == BRANCH:CDR_line \l_CDR_a_tl :n}
  \CDR_int_compare:cNnTF { __mini } > { 1 } {
    \use_none:n
  } {
